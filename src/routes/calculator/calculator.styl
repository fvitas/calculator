.calculator
    display: flex
    flex-direction: column-reverse
    width: 100vw
    height: 100vh
    padding-top: 60px
    background-color: #fafafa
    color: #333

    .live
    .result
        display: flex
        justify-content: flex-end
        flex: 0px 1 1
        max-height: 100px
        padding: 0 20px
        user-select: none

    .result
        align-items: center
        font-size: 35px
        color: #555

    .live
        align-items: flex-end
        font-size: 30px
        font-weight: 400

    .buttons
        display: grid
        grid-auto-flow: dense
        grid-template-columns: repeat(4, 1fr)
        grid-auto-rows: 65px
        grid-gap: 1px

    .button
        grid-area: span 1 / span 1
        display: flex
        justify-content: center
        align-items: center
        font-size: 24px
        user-select: none
        transition: all 0.1s ease-out

        &:active
            background-color: darken(#fafafa, 10%)

    .button_equals
        grid-area: span 2 / span 1
        background-color: #FFC20B
        color: #333
